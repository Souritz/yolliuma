<div class="container">

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="heading-text">会員情報登録</h1>
      <!-- <h1 class="panel-title">会員情報登録</h1> -->
    </div>
    <div class="panel-body">
      <section>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-position">
          <%= f.label :メールアドレス, class: "form-text" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "form-size" %>
        </div>

        <div class="field form-position">
          <%= f.label :ユーザー名, class: "form-text" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力してください", class: "form-size" %>
        </div>

        <div class="field form-position">
          <%= f.label :イラスト歴, class: "form-text" %><br>
          <%= f.text_field :history_year, autofocus: true, autocomplete: "history_year", placeholder: "年", class: "form-size-history" %>
          <%= f.text_field :history_month, autofocus: true, autocomplete: "history_month", placeholder: "ヶ月", class: "form-size-history" %>
        </div>

        <div class="field form-position">
          <%= f.label :パスワード, class: "form-text" %><br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください(6文字以上)", class: "form-size" %>
        </div>

        <div class="field form-position">
          <%= f.label :パスワード確認, class: "form-text" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください(6文字以上)", class: "form-size" %>
        </div>

        <div class="actions link-button">
          <%= f.submit "登録する", class: "btn btn-primary registration-button" %>
        </div>
        <% end %>

        <% render "users/shared/links" %>
      </section>
    </div>
  </div><!-- panelクラスの終わり -->

</div><!-- containerクラスの終わり -->
